<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/tool_bar" />

    <RelativeLayout
        android:id="@+id/rly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:paddingBottom="20dp"
        android:background="@drawable/mid_rect_shape"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/midiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/thanks_top"
            android:background="@drawable/view_rect_shape"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/midiv"
            android:text="@string/not_requirement_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="70dp"
            android:textSize="18sp"
            android:textColor="@color/titlecolor"
            android:gravity="center"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/suretv"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:text="@string/back_label"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/rly"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rect_button_shap2"/>

</RelativeLayout>