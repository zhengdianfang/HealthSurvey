<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:checkboxStyle">@style/AppTheme.CheckButton</item>
        <item name="android:radioButtonStyle">@style/AppTheme.RadioButton</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/default_input</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:height">@dimen/btnHeight</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:height">@dimen/btnHeight</item>
    </style>
    <style name="AppTheme.CheckButton" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    <style name="AppTheme.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_bg_seleter</item>
    </style>

</resources>
